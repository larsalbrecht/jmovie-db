<div id="buttonBar">
	<nav>
		<ul>
			<li>
				<a class="showImagewall">Show imagewall</a>
			</li>
		</ul>
	</nav>
</div>
<div id="allView" class="contentPart">
	{content}
	{paginationContainer}
</div>

{allFileList-start}
<table class="defaultTable">
	<thead>
		<tr>
			<th>Titel</th>
			<th class="hideXS">Typ</th>
			<th class="hideS hideXS">Hinzugef√ºgt am</th>
			<th class="hideS hideXS">Updated am</th>
		</tr>
	</thead>
	{fileListItems}
</table>
{allFileList-end}

{allFileListItem-start}
	<tr>
		<td><a href="?action=fileDetails&fileId={itemId}" data-image="{itemImageUrl}" data-id="{itemId}">{name}</a></td>
		<td class="hideXS">{type}</td>
		<td class="hideS hideXS">{added}</td>
		<td class="hideS hideXS">{updated}</td>
	</tr>
{allFileListItem-end}

{pagination-start}
<div class="pagination">
	<div class="paginationTop">
		<p>Zeige Seite {currentPage} von {maxPage}</p>
	</div>

	{paginationStartContainer}
	
	<span>{pageCurrentTitle}</span> 
	
	{paginationEndContainer}
</div>
{pagination-end}

{paginationStart-start}
	<span><a href="?action=showAll&page={pageFirst}">&lt;&lt;</a></span>
	
	<span><a href="?action=showAll&page={pagePrevious}">&lt;</a></span>
{paginationStart-end}

{paginationEnd-start}
	<span><a href="?action=showAll&page={pageNext}">&gt;</a></span>
	
	<span><a href="?action=showAll&page={pageLast}">&gt;&gt;</a></span>
{paginationEnd-end}